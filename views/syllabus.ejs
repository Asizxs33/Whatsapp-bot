<!DOCTYPE html>
<html lang="kk">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Силлабус Базасы</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .rotate-180 {
            transform: rotate(180deg);
        }

        .transition-transform {
            transition: transform 0.2s ease-in-out;
        }
    </style>
</head>

<body class="bg-gray-50 flex h-screen text-gray-800 font-sans">

    <!-- Sidebar -->
    <aside class="w-64 bg-indigo-900 text-white flex flex-col shadow-xl">
        <div class="p-6 border-b border-indigo-800">
            <h1 class="text-2xl font-bold flex items-center">
                <i class="fa-brands fa-whatsapp text-emerald-400 mr-2 text-3xl"></i>
                Силлабус Бот
            </h1>
        </div>
        <nav class="flex-1 p-4 space-y-2">
            <a href="/" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-indigo-800 transition">
                <i class="fa-solid fa-robot w-6 text-center"></i>
                <span>Ботты басқару</span>
            </a>
            <a href="/syllabus" class="flex items-center space-x-3 p-3 rounded-lg bg-indigo-800 font-medium">
                <i class="fa-solid fa-book-open w-6 text-center"></i>
                <span>Силлабус базасы</span>
            </a>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-8 overflow-y-auto w-full">
        <header class="mb-8 flex justify-between items-end">
            <div>
                <h2 class="text-3xl font-bold text-gray-800">Силлабус базасы</h2>
                <p class="text-gray-500 mt-1">Барлық пәндер мен тақырыптарды басқару</p>
            </div>

            <button onclick="document.getElementById('addModal').classList.remove('hidden')"
                class="bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2.5 rounded-lg font-medium flex items-center transition shadow-sm">
                <i class="fa-solid fa-plus mr-2"></i> Жаңа тақырып қосу
            </button>
        </header>

        <% if (error) { %>
            <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded shadow-sm">
                <div class="flex items-center">
                    <i class="fa-solid fa-circle-exclamation mr-2"></i>
                    <p>
                        <%= error %>
                    </p>
                </div>
            </div>
            <% } %>

                <% if (success==='add' ) { %>
                    <div class="bg-emerald-50 border-l-4 border-emerald-500 text-emerald-700 p-4 mb-6 rounded shadow-sm"
                        id="successMsg">
                        <div class="flex items-center">
                            <i class="fa-solid fa-check-circle mr-2"></i>
                            <p>Тақырып сәтті қосылды!</p>
                        </div>
                    </div>
                    <script>setTimeout(() => document.getElementById('successMsg').style.display = 'none', 3000);</script>
                    <% } else if (success==='update' ) { %>
                        <div class="bg-blue-50 border-l-4 border-blue-500 text-blue-700 p-4 mb-6 rounded shadow-sm"
                            id="successMsg">
                            <div class="flex items-center">
                                <i class="fa-solid fa-check-circle mr-2"></i>
                                <p>Тақырып сәтті жаңартылды!</p>
                            </div>
                        </div>
                        <script>setTimeout(() => document.getElementById('successMsg').style.display = 'none', 3000);</script>
                        <% } %>

                            <!-- Database Accordion Grouping -->
                            <div class="space-y-4">
                                <% const keys=Object.keys(groupedTopics); %>
                                    <% if (keys.length===0) { %>
                                        <div
                                            class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center text-gray-500">
                                            <i class="fa-solid fa-inbox text-4xl text-gray-300 mb-3 block"></i>
                                            Деректер базасы бос. Жаңа пән қосыңыз.
                                        </div>
                                        <% } else { %>
                                            <% keys.forEach(subject=> {
                                                // Create a safe ID string for DOM elements
                                                const safeId = subject.replace(/[^A-Za-z0-9_]/g, '');
                                                %>
                                                <div
                                                    class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                                                    <!-- Accordion Header -->
                                                    <button onclick="toggleAccordion('<%= safeId %>')"
                                                        class="w-full px-6 py-4 flex justify-between items-center bg-gray-50 hover:bg-gray-100 transition border-b border-gray-100 focus:outline-none">
                                                        <h3 class="font-bold text-gray-800 text-lg flex items-center">
                                                            <i class="fa-solid fa-book text-indigo-400 mr-3"></i>
                                                            <%= subject %>
                                                                <span
                                                                    class="bg-indigo-100 text-indigo-800 text-xs py-1 px-3 rounded-full ml-3 font-semibold">
                                                                    <%= groupedTopics[subject].length %> тақырып
                                                                </span>
                                                        </h3>
                                                        <i class="fa-solid fa-chevron-down text-gray-400 transition-transform"
                                                            id="icon-<%= safeId %>"></i>
                                                    </button>

                                                    <!-- Accordion Content -->
                                                    <div id="content-<%= safeId %>" class="hidden">
                                                        <div class="overflow-x-auto">
                                                            <table class="w-full text-left text-sm text-gray-600">
                                                                <thead
                                                                    class="bg-white text-gray-500 font-medium border-b border-gray-100">
                                                                    <tr>
                                                                        <th class="px-6 py-3 w-24">Апта</th>
                                                                        <th class="px-6 py-3 w-32">Түрі</th>
                                                                        <th class="px-6 py-3">Тақырып</th>
                                                                        <th
                                                                            class="px-6 py-3 w-32 text-right border-l border-gray-50">
                                                                            Әрекет</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody class="divide-y divide-gray-50">
                                                                    <% groupedTopics[subject].forEach(t=> { %>
                                                                        <tr class="hover:bg-gray-50/50 transition">
                                                                            <td class="px-6 py-4">
                                                                                <span
                                                                                    class="bg-gray-100 text-gray-600 px-2 py-1 rounded font-mono text-xs border border-gray-200">
                                                                                    <%= t.week %>-апта
                                                                                </span>
                                                                            </td>
                                                                            <td class="px-6 py-4">
                                                                                <span class="px-2 py-1 rounded text-xs font-medium border
                                                        <%= t.type==='Дәріс' ? 'bg-blue-50 text-blue-700 border-blue-200' : 
                                                            t.type==='Практика' ? 'bg-purple-50 text-purple-700 border-purple-200' : 
                                                            'bg-amber-50 text-amber-700 border-amber-200' %>">
                                                                                    <%= t.type %>
                                                                                </span>
                                                                            </td>
                                                                            <td
                                                                                class="px-6 py-4 text-gray-800 leading-relaxed">
                                                                                <%= t.topic %>
                                                                            </td>
                                                                            <td
                                                                                class="px-6 py-4 text-right border-l border-gray-50">
                                                                                <button
                                                                                    onclick="openEditModal(<%= t.id %>, '<%= t.subject.replace(/'/g, '\\\'') %>', '<%= t.type %>', <%= t.week %>, `<%= t.topic.replace(/`/g, '\\`') %>`)"
                                                                                    class="text-indigo-500 hover:text-indigo-700 hover:bg-indigo-50 p-2 rounded transition mr-1"
                                                                                    title="Өзгерту">
                                                                                    <i class="fa-solid fa-pen"></i>
                                                                                </button>
                                                                                <form
                                                                                    action="/syllabus/delete/<%= t.id %>"
                                                                                    method="POST" class="inline"
                                                                                    onsubmit="return confirm('Өшіруді растайсыз ба?');">
                                                                                    <button type="submit"
                                                                                        class="text-red-400 hover:text-red-600 hover:bg-red-50 p-2 rounded transition"
                                                                                        title="Өшіру">
                                                                                        <i
                                                                                            class="fa-solid fa-trash-can"></i>
                                                                                    </button>
                                                                                </form>
                                                                            </td>
                                                                        </tr>
                                                                        <% }) %>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% }) %>
                                                    <% } %>
                            </div>
    </main>

    <!-- Add Topic Modal -->
    <div id="addModal"
        class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 z-50 flex items-center justify-center backdrop-blur-sm">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-lg overflow-hidden transform transition-all">
            <div class="px-6 py-4 border-b border-gray-100 flex justify-between items-center bg-gray-50">
                <h3 class="font-bold text-gray-800 text-lg">Жаңа тақырып қосу</h3>
                <button onclick="document.getElementById('addModal').classList.add('hidden')"
                    class="text-gray-400 hover:text-red-500 transition">
                    <i class="fa-solid fa-xmark text-xl"></i>
                </button>
            </div>

            <form action="/syllabus/add" method="POST" class="p-6">
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Пән атауы</label>
                        <input type="text" name="subject" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition"
                            placeholder="Мысалы: ҒЗӘ">
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Сабақ түрі</label>
                            <select name="type" required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none">
                                <option value="Дәріс">Дәріс</option>
                                <option value="Практика">Практика</option>
                                <option value="Зертханалық">Зертханалық</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Апта нөмірі</label>
                            <input type="number" name="week" min="1" max="15" required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none"
                                placeholder="1-15">
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Тақырып мазмұны</label>
                        <textarea name="topic" required rows="3"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none resize-none"
                            placeholder="Тақырыпты толық жазыңыз..."></textarea>
                    </div>
                </div>

                <div class="mt-8 flex justify-end space-x-3">
                    <button type="button" onclick="document.getElementById('addModal').classList.add('hidden')"
                        class="px-5 py-2.5 text-gray-600 hover:bg-gray-100 rounded-lg font-medium transition">
                        Болдырмау
                    </button>
                    <button type="submit"
                        class="px-5 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-medium shadow-sm transition">
                        Қосу
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Edit Topic Modal -->
    <div id="editModal"
        class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 z-50 flex items-center justify-center backdrop-blur-sm">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-lg overflow-hidden transform transition-all">
            <div class="px-6 py-4 border-b border-gray-100 flex justify-between items-center bg-gray-50">
                <h3 class="font-bold text-gray-800 text-lg">Тақырыпты өзгерту</h3>
                <button onclick="document.getElementById('editModal').classList.add('hidden')"
                    class="text-gray-400 hover:text-red-500 transition">
                    <i class="fa-solid fa-xmark text-xl"></i>
                </button>
            </div>

            <form id="editForm" method="POST" class="p-6">
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Пән атауы</label>
                        <input type="text" id="editSubject" name="subject" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition">
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Сабақ түрі</label>
                            <select id="editType" name="type" required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none">
                                <option value="Дәріс">Дәріс</option>
                                <option value="Практика">Практика</option>
                                <option value="Зертханалық">Зертханалық</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Апта нөмірі</label>
                            <input type="number" id="editWeek" name="week" min="1" max="15" required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none">
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Тақырып мазмұны</label>
                        <textarea id="editTopic" name="topic" required rows="3"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none resize-none"></textarea>
                    </div>
                </div>

                <div class="mt-8 flex justify-end space-x-3">
                    <button type="button" onclick="document.getElementById('editModal').classList.add('hidden')"
                        class="px-5 py-2.5 text-gray-600 hover:bg-gray-100 rounded-lg font-medium transition">
                        Болдырмау
                    </button>
                    <button type="submit"
                        class="px-5 py-2.5 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium shadow-sm transition">
                        Сақтау
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function toggleAccordion(id) {
            const content = document.getElementById('content-' + id);
            const icon = document.getElementById('icon-' + id);
            if (content.classList.contains('hidden')) {
                content.classList.remove('hidden');
                icon.classList.add('rotate-180');
            } else {
                content.classList.add('hidden');
                icon.classList.remove('rotate-180');
            }
        }

        function openEditModal(id, subject, type, week, topic) {
            document.getElementById('editForm').action = '/syllabus/edit/' + id;
            document.getElementById('editSubject').value = subject;
            document.getElementById('editType').value = type;
            document.getElementById('editWeek').value = week;
            document.getElementById('editTopic').value = topic;
            document.getElementById('editModal').classList.remove('hidden');
        }
    </script>
</body>

</html>